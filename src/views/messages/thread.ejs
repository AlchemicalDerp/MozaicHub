<%- include('../partials/header') %>
<h2>Conversation</h2>
<ul class="chat">
  <% messages.forEach(m => { %>
    <li class="<%= m.fromUserId === user.id ? 'me' : 'them' %>">[<%= new Date(m.createdAt).toLocaleString() %>] <span class="chat-body"><%- m.renderedText %></span></li>
  <% }) %>
</ul>
<form method="post" action="/messages/thread/<%= peerId %>">
  <textarea name="text" required></textarea>
  <button type="submit">Send</button>
</form>
<%- include('../partials/footer') %>
